{
  "env": {
     "es6": true,
     "browser": true,
     "node": true,
     "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "jsx-a11y",
    "react",
    "prettier"
  ],
  "extends": [
    "plugin:prettier/recommended",
    "airbnb",
    "prettier"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {"SwitchCase": 1}
    ],
    "import/order": "off",
    "import/prefer-default-export": "off",
    "linebreak-style": [
      "off"
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "quotes": [
      "error",
      "single",
      {"allowTemplateLiterals": true}
    ],
    "no-unused-vars": "warn",
    "semi": 0,
    "no-console": "off",
    "react/jsx-props-no-spreading": "off",
    "prettier/prettier": [
      "warn", {"semi": false}
    ]
  }
}
